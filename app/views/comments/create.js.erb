var index = ('<%=@comment.parent_id%>');
if (index == 0) {
  $('.comment-form-number-root').before('<%= j render 'comment', :comment => @comment %>');
  $('.comment-form-number-root textarea').val('');
}
else{
  $('#comment-' + index + ' > .comment-inner > .reply-inner').append('<%= j render 'comment', :comment => @comment %>');
  $('.comment-form-number-' + index + ' textarea').val('');
}
